{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es5",
      "es2015"
    ],
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "strict": true,
    "rootDir": "src"
  },
  "include": [
    "src"
  ],
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist"
  ]
}